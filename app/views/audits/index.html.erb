<div class="row">
    <div class="col s12">
      <h3 class="center-align"> Audits List </h3>
        <div align="center">
          <!-- Modal Trigger -->
            <a class="waves-effect waves-light btn modal-trigger" href="modal1">Fill Workouts</a>
            <!-- Modal Structure -->
            <div id="modal1" class="modal">
              <div class="modal-content">
                <h4>Add workouts to the audit</h4>
                <div class='row'>
                  <div class='col-xs-12'>
                    <%= form_for(@audit, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                      <div class="form-group">
                        <div class="row">
                          <div class="col-sm-offset-2 col-sm-8">
                          <%= f.collection_check_boxes :workout_ids, Workout.all, :id, :title do |cb| %>
                            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
              </div>
            </div>
        </div>
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Audit name</span>
            <p>Audit description!</p>
          </div>
          <div class="card-action">
            <a href="#">delete audit</a>
            <a href="#">edit audit</a>
          </div>
        </div>
      </div>
    </div>
