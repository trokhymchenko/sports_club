<div class="row">
  <div class="col s12">
    <h3 class="center-align"> Exercises Checklist </h3>
  </div>
</div>
<div class="container">
  <% @exercises.each do |exercise| %>
      <div class="col s6 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <p><%= exercise.title %></p>
            <p><%= exercise.description %></p>
          </div>
          <div class="card-action">
            <a><%= link_to "Delete", exercise, method: :delete, data: { confirm: "Are you sure?"} %></a>
          </div>
        </div>
      </div>
