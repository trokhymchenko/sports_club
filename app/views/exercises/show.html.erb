<% if @exercise.completed? %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <div style="text-align:center">
            <span class="card-title"><strike><%= @exercise.title %></strike></span>
            <p><%= @exercise.description %></p>
          </div>
        </div>
        <div class="card-action">
          <a><%= link_to '<i class="small material-icons">arrow_back</i>'.html_safe, root_path %></a>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <div style="text-align:center">
          <span class="card-title"><%= @exercise.title %></span>
          <p><%= @exercise.description %></p>
          </div>
        </div>
        <div class="card-action">
          <a><%= link_to '<i class="small material-icons">arrow_back</i>'.html_safe, root_path %></a>
          <a><%= link_to '<i class="small material-icons">edit</i>'.html_safe, edit_exercise_path(@exercise) %></a>
          <a><%= link_to '<i class="small material-icons">done</i>'.html_safe, complete_exercise_path(@exercise), method: :patch %></a>
        </div>
      </div>
    </div>
  </div>
<% end %>