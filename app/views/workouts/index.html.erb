<% if user_signed_in? %>
  <div class="row">
    <div class="col s12">
      <h3 class="center-align"> Workouts Checklist </h3>
    </div>
  </div>
  <div class="container">
    <% @workouts.each do |workout| %>
      <% if workout.completed? %>
        <div class="col s6 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><strike><%= link_to workout.title, workout %></strike></span>
              <p><%= workout.description %></p>
            </div>
            <div class="card-action">
              <a><%= link_to "Mark as Complete", complete_workout_path(workout), method: :patch %></a>
              <a><%= link_to "Delete", workout, method: :delete, data: { confirm: "Are you sure?"} %></a>
              <p>Completed <%= time_ago_in_words(workout.completed_at) %> ago!</p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="col s6 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= link_to workout.title, workout %></span>
              <p><%= workout.description %></p>
              <p><%= workout.question_title %></p>
              <p><%= workout.question_description %></p>
            </div>
            <div class="card-action">
              <a><%= link_to "Mark as Complete", complete_workout_path(workout), method: :patch %></a>
              <a><%= link_to "Delete", workout, method: :delete, data: { confirm: "Are you sure?"} %></a>
              <p>Created <%= time_ago_in_words(workout.created_at) %> ago!</p>
            </div>
            <a><%= link_to "Add new Exercise", new_exercise_path %></a>
          </div>
        </div>
      <% end %>
    <% end %>
    <ul class="pagination">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        <li class="active"><%= will_paginate @workouts %></li>
        <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>
  </div>
<% else %>
  <%= render 'layouts/static_landing_page' %>
<% end %>
