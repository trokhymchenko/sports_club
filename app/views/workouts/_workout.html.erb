<div class="container">
  <div class="col s12 m4">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div style="text-align:center">
          <% obj.each do |workout| %>
            <% if workout.completed? %>
              <%= link_to workout.title, workout_path(workout), style: "display:none;" %>
            <% else %>
            <div class="row">
              <div class="col-xs-8 col-xs-offset-2">
                <div class="well well-lg">
                  <div class="article-title">
                    <%= link_to workout.title, workout_path(workout) %>
                  </div>
                  <div class="article-body">
                    <%= truncate(workout.description, length: 100) %>
                  </div>
                  <div class="card-action">
                    <a><%= link_to '<i class="small material-icons">delete</i>'.html_safe, workout, method: :delete, data: { confirm: "Are you sure?"} %></a>
                    <a><%= link_to '<i class="small material-icons">playlist_add</i>'.html_safe, new_exercise_path(workout) %></a>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>