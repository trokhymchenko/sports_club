<div class="row">
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div style="text-align:center">
        <span class="card-title"><%= @workout.title %></span>
        <p><%= @workout.description %></p>
        </div>
      </div>
      <div class="card-action">
        <a><%= link_to "Back", root_path %></a>
        <a><%= link_to "Edit Workout", edit_workout_path(@workout) %></a>
        <a><%= link_to "Add new Exercise", new_exercise_path(@workout.id) %></a>
      </div>
    </div>
  </div>
</div>

<%= render "exercises/exercise", obj: @exercises %>
