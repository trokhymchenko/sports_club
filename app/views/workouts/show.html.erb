<% if @workout.completed? %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <div style="text-align:center">
          <span class="card-title"><%= @workout.title %></span>
          <p><%= @workout.description %></p>
          </div>
        </div>
        <div class="card-action">
          <a><%= link_to '<i class="small material-icons">arrow_back</i>'.html_safe, root_path %></a>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <div style="text-align:center">
          <span class="card-title"><%= @workout.title %></span>
          <p><%= @workout.description %></p>
          </div>
        </div>
        <div class="card-action">
          <a><%= link_to '<i class="small material-icons">arrow_back</i>'.html_safe, root_path %></a>
          <a><%= link_to '<i class="small material-icons">edit</i>'.html_safe, edit_workout_path(@workout) %></a>
          <a><%= link_to '<i class="small material-icons">playlist_add</i>'.html_safe, new_exercise_path(@workout.id) %></a>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render "exercises/exercise", obj: @exercises %>
